{{!
    Dashboard Summary Block for ValueMapDoc
    
    Context variables from plugin.php:
    * data.content_count - Number of documents
    * data.entries_count - Number of value map entries
    * data.recent_content - Array of recent content
    * data.has_recent_content - Boolean if recent content exists
}}

<div class="valuemap-summary">
    <div class="row mb-3">
        <div class="col-6">
            <div class="text-center">
                <h4 class="text-primary mb-1">{{data.content_count}}</h4>
                <small class="text-muted">{{#str}}documents, aitoolsub_valuemapdoc{{/str}}</small>
            </div>
        </div>
        <div class="col-6">
            <div class="text-center">
                <h4 class="text-success mb-1">{{data.entries_count}}</h4>
                <small class="text-muted">{{#str}}value_maps, aitoolsub_valuemapdoc{{/str}}</small>
            </div>
        </div>
    </div>
    
    {{#data.has_recent_content}}
        <div class="recent-activity">
            <h6 class="mb-2">
                <i class="fa fa-clock me-1"></i>
                {{#str}}recent_activity, aitoolsub_valuemapdoc{{/str}}
            </h6>
            {{#data.recent_content}}
                <div class="recent-item mb-2 p-2 bg-light rounded">
                    <div class="d-flex justify-content-between align-items-start">
                        <a href="{{{view_url}}}" >
                        <div>
                            <small class="fw-bold">{{name}}</small>
                            <br>
                            <small class="text-muted">{{timecreated_formatted}}</small>
                        </div>
                            <span class="btn btn-sm btn-outline-primary">
                            <i class="fa fa-eye"></i>
                            </span>
                        </a>
                    </div>
                </div>
            {{/data.recent_content}}
        </div>
    {{/data.has_recent_content}}
    
    {{^data.has_recent_content}}
        <div class="text-center text-muted">
            <i class="fa fa-file-text fa-2x mb-2"></i>
            <p class="small mb-0">{{#str}}no_recent_activity, aitoolsub_valuemapdoc{{/str}}</p>
        </div>
    {{/data.has_recent_content}}
    
    <div class="mt-3">
        <a href="/local/aitools/plugins/valuemapdoc/my_content.php" class="btn btn-primary btn-sm w-100">
            {{#str}}view_all_content, aitoolsub_valuemapdoc{{/str}}
        </a>
    </div>
</div>